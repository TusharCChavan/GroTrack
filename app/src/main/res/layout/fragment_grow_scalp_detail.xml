<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.SearchResultsContainerFragment">


    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/show_data_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/linearLayout9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/show_data_start">

        <TextView
            android:id="@+id/patientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Patient Name"
            android:textColor="@color/text"
            android:textSize="15sp" />

        <View
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/input_text" />


        <TextView
            android:fontFamily="@font/roboto_bold"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Scalp INflamation"
            android:textColor="@color/text"
            android:textSize="18sp"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_hairimg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_220sdp" />

        <ProgressBar
            android:id="@+id/pb_image"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>



    <TextView
        android:id="@+id/tv_productdes"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/_11ssp"
        android:text="Meet Hair Transplant Surgeon Dr. Alan J. Bauman, MD, ABHRS, IAHRS, FISHRS, Founder, CEO &amp; Medical Director of Bauman Medical"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_solution"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:layout_marginBottom="90dp"
        android:backgroundTint="@color/footer"
        android:text="SOLUTIONS"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</LinearLayout>